---
import DynamicProperties from '@/components/DynamicProperties.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout title='Ejemplos de CSS y AstroDB'>
  <main>
    <div class='bg-content'>
      <div class='bg'></div>
    </div>
    <div class='scroll-loader'></div>
    <header class='header'>
      <h1 class='header-title'>
        Ejemplos de CSS y AstroDB<sup>by Madeval</sup>
      </h1>
    </header>
    <section class='content'>
      <DynamicProperties />
    </section>
  </main>
</Layout>

<style>
  .bg-content {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: light-dark(var(--white), var(--dark));
    z-index: -1;
  }

  .bg {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: linear-gradient(to right, #4f4f4f2e 1px, transparent 1px),
      linear-gradient(to bottom, #4f4f4f2e 1px, transparent 1px);
    background-size: 14px 24px;
    mask-image: radial-gradient(
      ellipse 60% 50% at 50% 0%,
      #000 70%,
      transparent 100%
    );
  }

  main {
    min-height: 200dvh;
  }

  .header {
    position: fixed;
    left: 0;
    top: 0;
    background-color: hsla(0, 0%, 10%, 0);
    border-bottom: 1px solid hsl(0 0% 100% / 0);
    width: 100%;
    padding: 2rem 2rem;
    animation: adjust-header-height linear both;
    animation-timeline: scroll();
    animation-range: 0px 100px;
    z-index: 1000;
  }

  .header-title {
    display: flex;
    justify-content: center;
    gap: 0.5em;
    font-size: var(--text-lg);
    animation: adjust-header linear both;
    animation-timeline: scroll();
    animation-range: 0px 100px;
  }

  .content {
    display: flex;
    gap: 1em;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 12em 2em;
  }

  .scroll-loader {
    position: fixed;
    top: 0;
    left: 0;
    height: 0.25rem;
    width: 100%;
    background-color: light-dark(
      var(--dark-transparent),
      var(--white-transparent)
    );
    transform: scaleX(0);
    transform-origin: 0 50%;
    animation: scroll-loader-animation linear both;
    animation-timeline: scroll();
    z-index: 1001;
  }

  @keyframes adjust-header {
    to {
      font-size: var(--text-base);
      opacity: 0.4;
    }
  }
  @keyframes adjust-header-height {
    to {
      padding: 0.25rem 1rem;
      border-bottom: 1px solid hsl(0 0% 100% / 0.125);
      background-color: hsla(0, 0%, 10%, 1);
    }
  }

  @keyframes scroll-loader-animation {
    to {
      transform: scaleX(1);
    }
  }
</style>
