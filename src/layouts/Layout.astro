---
// Supports weights 100-900
import '@fontsource-variable/inter'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Muchos ejemplos de CSS e implementacion de AstroDB! ðŸš€'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
    --dark: hsl(0, 0%, 10%);
    --white: hsla(0, 0%, 100%);
    --white-transparent: hsl(0 0% 100% / 0.125);
    --dark-transparent: hsl(0 0% 10% / 0.125);

    --text-light: var(--dark);
    --text-dark: var(--white);

    --border-light: var(--dark-transparent);
    --border-dark: var(--white-transparent);
  }

  * {
    box-sizing: border-box;
  }
  body {
    font-family: 'Inter Variable', sans-serif;
    margin: 0;
    padding: 0;
    color: light-dark(var(--text-light), var(--text-dark));
    background-color: light-dark(var(--light), var(--dark));
  }
</style>
